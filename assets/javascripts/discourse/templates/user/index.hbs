<form class="profile-overview">
  <h2>Overview</h2>
  <div class="control-group pref-avatar">
    {{bound-avatar model "large"}}
  </div>

  {{#if stackexchangeEnabled}}
    <div id="login-buttons" class="ember-view">
      <button {{bind-attr class="hasStackExchange::btn-primary btn::btn btnsocial::btn-social"}} {{action "externalLogin"}}>
        {{i18n 'user.connect_with_stackexchange'}}
      </button>
    </div>
  {{/if}}

  <div class="row">
    <div class="span8">
      <div class="form-group pref-name">
        <label>{{i18n 'user.name.title'}}</label>
        <span class='static uneditable-input'>{{name}}</span>
      </div>
      <div class="form-group pref-email">
        <label>{{i18n 'user.email.title'}}</label>
        <span class='static uneditable-input'>{{email}}</span>
      </div>
    </div>
    <div class="user-additional-fields">
      <div class="form-group pref-company">
        <label>{{companyField.field.name}}</label>
        <span class='static uneditable-input'>{{companyField.value}}</span>
      </div>
      <div class="form-group pref-job">
        <label>{{jobTitleField.field.name}}</label>
        <span class='static uneditable-input'>{{jobTitleField.value}}</span>
      </div>
      <div class="form-group pref-signature">
        <label>{{customSignatureField.field.name}}</label>
        <span class='static uneditable-input'>{{customSignatureField.value}}</span>
      </div>
    </div>

    <div class="input-block-level"></div>

    <div class="form-group pref-username">
      <label>{{i18n 'user.username.title'}}</label>
      <span class='static uneditable-input'>{{username}}</span>
    </div>
  </div>
</form>

