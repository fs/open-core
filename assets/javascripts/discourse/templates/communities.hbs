<section class="communities">
  <div class="map-wrapper">
    {{google-maps model=model}}
    {{maps-filters model=model useDateFilter=useDateFilter time=time}}
  </div>

  <div class="container">
    <div class='section-nav'>
      {{#link-to 'communities.groups' (query-params lat=lat lon=lon radius=radius) class='section-nav-item'}}
        {{ i18n 'communities.locate_groups' }}
      {{/link-to}}

      {{#link-to 'communities.events' (query-params lat=lat lon=lon radius=radius time=time) class='section-nav-item' }}
        {{ i18n 'communities.locate_events' }}
      {{/link-to}}

      {{#link-to 'communities.about' (query-params lat=lat lon=lon radius=radius) class='section-nav-item'}}
        {{ i18n 'communities.about' }}
      {{/link-to}}
    </div>

    {{loading-spinner condition=loading}}

    <div class="row" {{bind-attr class="loading:hidden"}}>
      {{outlet "results"}}
    </div>
  </div>
</section>
