<div class='landing'>
  <section class="hero-section">
    <div class="container">
      <h1 class="section-title">
        {{{i18n 'homepage.title'}}}
      </h1>
    </div>
  </section>

  <section class='bottom-section'>
    <div class='container'>
      {{#if model}}
        <section class='top-section'>
          <a class='section-anchor' name='discussions' id='discussions'></a>
          <h2 class="section-title">
            {{i18n 'homepage.latest_discussions'}}
          </h2>
          {{ topic-list topics=model }}
        </section>
      {{/if}}
    </div>
  </section>
</div>
