<section class="static-page">
  <div class="container">

    {{#if recipeIsSubmitted}}
      <div class='alert alert-info'>
        <a class="close" data-dismiss="alert">&times;</a>
        {{i18n 'recipes.success_submit'}}
      </div>
    {{/if}}

    <div class="row">
      <h1>{{i18n 'recipes.submit'}}</h1>
      <form class="submit-recipe" action="">
        <div class="control-group row">
          <label class="control-label">{{i18n 'recipes.recipe_title'}}</label>
          <div class="controls col-8">
            {{input type='text' class='form-control' value=title}}
          </div>
        </div>
        <div class="row">
          <div class="control-group col-4">
            <label class="control-label">{{i18n 'recipes.category'}}</label>
            <div class="controls">
              {{view 'select' content=categories
                              prompt="Select a Category"
                              optionValuePath="content.id"
                              optionLabelPath="content.name"
                              value=category}}
            </div>
          </div>
        </div>
        <hr>

        <div class="filter-col row">
          <p class="filter-title">{{i18n 'recipes.filter.language'}}</p>

          <div class="col-8">
            {{#each language in languages}}
              <label class="col-4">
                {{input type='checkbox' name='language'}} {{language}}
              </label>
            {{/each}}
          </div>
        </div>

        <hr>

        <div class="filter-col row">
          <p class="filter-title">{{i18n 'recipes.filter.technology'}}</p>

          <div class="col-8">
            {{#each technology in technologies}}
              <label class="col-4">
                {{input type='checkbox' name='technology'}} {{technology}}
              </label>
            {{/each}}
          </div>
        </div>

        <hr>
        <div class="control-group col-8">
          <label class="control-label">{{i18n 'recipes.applies_to'}}</label>
          <div class="controls">
            {{textarea class='form-control' value=description placeholder='Description of that the intended usage of the recipe'}}
          </div>
        </div>

        <div class="control-group col-8">
          <label class="control-label">{{i18n 'recipes.what_you_must_know'}}</label>
          <div class="controls">
            {{textarea class='form-control' value=knowleage}}
          </div>
        </div>
        <hr>

        <p class="hint">{{i18n 'recipes.steps_hint'}}</p>
        <div class="steps-constructor row">
          <strong class="col-1">{{i18n 'recipes.step'}} 1</strong>
          <div class="col-7">
            <label class="control-label">{{i18n 'recipes.step_title'}}:</label>
            <div class="controls">
              {{input type='text' class='form-control'}}
            </div>

            <label class='control-label'>{{i18n 'recipes.step_description'}}</label>
            <div class="controls">
              {{textarea class='form-control'}}
            </div>
          </div>
        </div>
        <a href="#" {{action 'addStep'}}>
          {{fa-icon 'plus-circle'}}
          {{i18n 'recipes.add_additional_steps' }}
        </a>
        <hr>
        <div class="control-group">
          <div class="controls">
            <button class="btn btn-primary" {{action 'submitRecipe'}}>
              {{i18n 'recipes.submit'}}
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
